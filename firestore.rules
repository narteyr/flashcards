rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function isAdmin() {
      return isSignedIn() && request.auth.token.email.matches('.*@dartmouth.edu$');
    }

    // Programs collection - anyone can read
    match /programs/{programId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Documents collection
    match /documents/{documentId} {
      // Anyone can read public/approved documents
      allow read: if resource.data.status == 'approved' && resource.data.isPublic == true;

      // Document owner can always read their own documents
      allow read: if isOwner(resource.data.uploadedBy);

      // Admins can read all documents
      allow read: if isAdmin();

      // Authenticated users can create documents
      allow create: if isSignedIn()
        && request.resource.data.uploadedBy == request.auth.uid
        && request.resource.data.status == 'private'
        && request.resource.data.isPublic == false;

      // Document owner can update their own documents
      allow update: if isOwner(resource.data.uploadedBy);

      // Admins can update any document (for approval/rejection)
      allow update: if isAdmin();

      // Document owner can delete their own documents
      allow delete: if isOwner(resource.data.uploadedBy);

      // Admins can delete any document
      allow delete: if isAdmin();
    }

    // Document reviews collection
    match /document_reviews/{reviewId} {
      // Admins can read all reviews
      allow read: if isAdmin();

      // Users can read reviews for their own documents
      allow read: if isSignedIn() && request.auth.uid == resource.data.uploadedBy;

      // Authenticated users can create review requests
      allow create: if isSignedIn() && request.resource.data.uploadedBy == request.auth.uid;

      // Only admins can update reviews
      allow update: if isAdmin();

      // Only admins can delete reviews
      allow delete: if isAdmin();
    }

    // Decks collection (flashcards)
    match /decks/{deckId} {
      // Anyone can read public decks
      allow read: if true;

      // Authenticated users can create decks
      allow create: if isSignedIn();

      // Contributors can update decks (add flashcards)
      allow update: if isSignedIn() && (
        request.auth.uid in resource.data.contributors ||
        request.auth.uid in request.resource.data.contributors
      );

      // Admins can delete decks
      allow delete: if isAdmin();
    }

    // User profiles (optional - if you want to add user data)
    match /users/{userId} {
      allow read: if true;
      allow write: if isOwner(userId);
    }

    // Catch-all: deny by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
